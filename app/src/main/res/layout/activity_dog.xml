<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DogActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/color_WHITE"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="left"
                    android:adjustViewBounds="true"
                    android:background="@color/colorPrimaryDark"
                    android:maxHeight="200dp"
                    android:maxWidth="200dp"
                    android:onClick="onClick" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="이름"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:inputType="text"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="생일"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txtdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:onClick="mOnClick"
                        android:text="선택"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:text="성별"
                            android:textSize="15dp" />

                        <RadioGroup
                            android:id="@+id/gender"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/man"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:text="남"
                                android:textSize="15dp" />

                            <RadioButton
                                android:id="@+id/woman"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:text="여"
                                android:textSize="15dp" />
                        </RadioGroup>
                    </LinearLayout>

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="10dp"
                        android:text="종"
                        android:textSize="15dp" />

                    <Spinner
                        android:id="@+id/spacies"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:entries="@array/Dspacies"
                        android:inputType="text"
                        android:textSize="15dp" />

                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btn_UploadPicture"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:background="@color/color_button"
                android:onClick="onClick"
                android:text="사진선택"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="예방접종 유무"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="7종 백신"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/back7"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:entries="@array/back"
                        android:inputType="text"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/btnchangedate1"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:onClick="mOnClick"
                        android:text="최근 접종일자" />

                    <TextView
                        android:id="@+id/txtdate1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="일자"
                        android:textSize="15dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="코로나 장염"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/co"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:entries="@array/coro"
                        android:inputType="text"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/btnchangedate2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:onClick="mOnClick"
                        android:text="최근 접종일자" />

                    <TextView
                        android:id="@+id/txtdate2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="일자"
                        android:textSize="15dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="켄넬코프"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/can"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:entries="@array/canNel"
                        android:inputType="text"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btnchangedate3"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:onClick="mOnClick"
                        android:text="최근 접종일자" />

                    <TextView
                        android:id="@+id/txtdate3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="일자"
                        android:textSize="15dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="광견병"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/cary"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:entries="@array/gang"
                        android:inputType="text"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/btnchangedate4"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:onClick="mOnClick"
                        android:text="최근 접종일자" />

                    <TextView
                        android:id="@+id/txtdate4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="일자"
                        android:textSize="15dp" />
                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btn_finish"
                android:layout_width="285dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@color/color_button"
                android:onClick="onClick"
                android:text="완료"
                android:textColor="@color/color_WHITE" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>



